# Copy to .env and fill in your values.
# Backend loads this file from the backend/ directory.

# Deepgram API key (required for live transcription).
# Get one at https://console.deepgram.com
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Flask secret key (used for sessions; also fallback for JWT if JWT_SECRET unset)
SECRET_KEY=dev-secret-change-in-production

# JWT signing secret for auth tokens (optional; falls back to SECRET_KEY if unset)
# JWT_SECRET=your-jwt-secret-here

# MongoDB connection string.
# Local: mongodb://localhost:27017
# Atlas:  mongodb+srv://USER:PASSWORD@cluster.xxxxx.mongodb.net/?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017

# MongoDB database name (optional; default: meeting_transcription)
# MONGODB_DB_NAME=meeting_transcription

# You.com API key (required for summarization & research insights).
# Get one at https://you.com/platform ($100 free credits for API projects)
YOUCOM_API_KEY=your_youcom_api_key_here
# Optional overrides if defaults fail:
# YOUCOM_SEARCH_URL=https://ydc-index.io
# YOUCOM_AGENTS_URL=https://api.you.com
